<p id="notice"><%= notice %></p>

<h1>Listing Images</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Quantity</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.name %></td>
        <td><%= image.description %></td>
        <td><%= image.quantity %></td>
        <td>
        <% if image.gallery.present? %>
          <tr>
            <td><%= image_tag image.gallery.image_1_url(:small)%></td>
            <td><%= image_tag image.gallery.image_2_url(:small)%></td>
            <td><%= image_tag image.gallery.image_3_url(:small)%></td>
            <td><%= image_tag image.gallery.image_4_url(:small)%></td>
            <td><%= image_tag image.gallery.image_5_url(:small)%></td>
          </tr>
        <% else %>
          <%= image_tag image.image_url(:small) %>
        <% end %>
        </td>
        <td><%= link_to 'Show', image %></td>
        <td><%= link_to 'Edit', edit_image_path(image) %></td>
        <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

